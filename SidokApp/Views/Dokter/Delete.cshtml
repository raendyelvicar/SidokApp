@model SidokApp.Models.Dto.DokterDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Hapus Dokter</h1>

<h3>Apakah anda yaking ingin menghapus data ini?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Nama
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nama)
        </dd>
        <dt class = "col-sm-2">
           NIP
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nip)
        </dd>
        <dt class = "col-sm-2">
            NIK
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nik)
        </dd>
        <dt class = "col-sm-2">
            Tanggal Lahir
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TanggalLahir)
        </dd>
        <dt class = "col-sm-2">
            Tempat Lahir
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TempatLahir)
        </dd>
        <dt class = "col-sm-2">
            Jenis Kelamin
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JenisKelaminString)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Spesialisasi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Spesialisasi)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Nik" />
        <input type="submit" value="Hapus" class="btn btn-danger" /> |
        <a asp-action="Index">Kembali ke Beranda</a>
    </form>
</div>
