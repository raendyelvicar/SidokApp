@model SidokApp.Models.Dto.JadwalJagaDto

@{
    ViewData["Title"] = "Create";
    var poli = (IEnumerable<SelectListItem>)ViewData["poli"];
}

<h1>Tambah Poli</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDokter" />
            <input type="hidden" asp-for="NamaDokter" />
            <div class="form-group">
                <label asp-for="NamaDokter" class="control-label"></label>
                <input asp-for="NamaDokter" class="form-control" disabled/>
                <span asp-validation-for="NamaDokter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Hari</label>
                <select class="form-control" asp-for="Hari">
                    <option>--Pilih Hari--</option>
                    <option value="Senin">Senin</option>
                    <option value="Selasa">Selasa</option>
                    <option value="Rabu">Rabu</option>
                    <option value="Kamis">Kamis</option>
                    <option value="Jumat">Jumat</option>
                    <option value="Sabtu">Sabtu</option>
                    <option value="Minggu">Minggu</option>
                </select>
                <span asp-validation-for="Hari" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Poli</label>
                <select class="form-control" asp-for="IdPoli" asp-items="poli">
                    <option>--Pilih Poli--</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Simpan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Kembali ke Beranda</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
