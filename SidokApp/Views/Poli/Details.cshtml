@using SidokApp.Models.Dto;
@model SidokApp.Models.PoliModel

@{
    ViewData["Title"] = "Details";
    var dokterJaga = (IEnumerable<JadwalJagaDto>)ViewData["DokterJaga"];
}

<h1>Detail Poli</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nama)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nama)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lokasi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lokasi)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Nama Dokter
            </th>
            <th>
                Spesialisasi
            </th>
            <th>
                Jadwal
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in dokterJaga)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NamaDokter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Spesialisasi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Jadwal)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Ubah</a> |
    <a asp-action="Index">Kembali ke Beranda</a>
</div>
